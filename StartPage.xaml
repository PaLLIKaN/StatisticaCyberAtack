<Page x:Class="StatisticaCyberAtack.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:StatisticaCyberAtack"
      mc:Ignorable="d"
      d:DesignHeight="820" d:DesignWidth="1280"
      Title="StartPage" >
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/Back_Person.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <TextBlock 
        Margin="20" 
        Foreground="#FFFFFF" 
        FontSize="36" 
        FontFamily="Segoe UI" 
        TextAlignment="Center" 
        VerticalAlignment="Top">
        Прогнозирование уровня Кибератак с целью финансовой выгоды
        </TextBlock>
        <Button 
        Name="StartButton" 
        Content="Начать" 
        Click="StartButton_Click" 
        HorizontalAlignment="Left" 
        VerticalAlignment="Top" 
        Width="150" 
        Height="150" 
        Background="#007ACC" 
        Foreground="#FFFFFF" 
        FontSize="20" 
        FontFamily="Segoe UI" 
        Style="{StaticResource RoundButtonStyle}" Margin="556,486,0,0" />
    </Grid>
</Page>
